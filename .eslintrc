{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018
  },
  "plugins": ["react", "react-native", "import"],
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:react/recommended",
    "plugin:react-native/all",
    "airbnb-base"
  ],
  "rules": {
    "indent": "warn",
    "class-methods-use-this": "off",
    "no-use-before-define": "off",
    "linebreak-style": "warn",
    "no-unused-vars": "warn"
  },
  "env": {
    "jest": true,
    "es6": true
  }
}